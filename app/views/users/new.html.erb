<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <%= render partial: 'shared/header', locals: {
                    icon: 'users',
                    breadcrumb_1: 'Users',
                    breadcrumb_2: 'Nouveau',
                    url: users_path,
                    url_text: "Retour"
                }
            %>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col col-sm">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Edit profile </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <%= render partial: 'users/profile/form', locals: {
                            user: @user, 
                            url: new_user_path,
                            method: :post
                        } 
                    %>
                </div>
            </div>
        </div>
    </div>
</div>