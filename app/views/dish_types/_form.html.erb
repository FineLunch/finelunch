<%= form_for(@dish_type, url: url, html: { method: method }) do |f| %>
  <%= render "shared/error_message", ressource: @dish_type %>
  <div class="pl-lg-4">
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :name, class: "form-control-label" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
            <%= f.label :extra, class: "form-control-label" %><br />
            <%= f.number_field :extra, autofocus: true, autocomplete: "extra", class: "form-control" %>
        </div>
      </div>
    </div>
  <div class="pl-lg-4">
    <div class="row">
      <div class="col-lg-6">
        <%= link_to dish_types_path, class: "btn btn-outline-default" do %>
          Annuler
        <% end %>
        <%= f.submit "Enregistrer", class: "btn  btn-primary" %>
      </div>
      <div class="col-lg-6"></div>
    </div>
  </div>

  </div>
<% end %>
